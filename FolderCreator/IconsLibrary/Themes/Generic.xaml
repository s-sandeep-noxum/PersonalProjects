<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:CommandImages="clr-namespace:IconsLibrary" >
    <SolidColorBrush x:Key="DisabledMask" Color="#44000000"/>

    <Style x:Key="CommandImageStyle" TargetType="Image">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ButtonBase, AncestorLevel=1}, Path=IsEnabled}" Value="False">
                <Setter Property="OpacityMask" Value="{StaticResource DisabledMask}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="{x:Type CommandImages:Computer}" BasedOn="{StaticResource CommandImageStyle}">
        <Setter Property="Source" Value="../UI-48/Computer.png"/>
    </Style>

    <Style TargetType="{x:Type CommandImages:ComputerNew}" BasedOn="{StaticResource CommandImageStyle}">
        <Setter Property="Source" Value="../UI-48/ComputerNew.png"/>
    </Style>
</ResourceDictionary>