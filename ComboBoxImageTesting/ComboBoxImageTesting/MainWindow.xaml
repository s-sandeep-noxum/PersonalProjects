<Window x:Class="ComboBoxImageTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBoxImageTesting"
        xmlns:vm ="clr-namespace:ComboBoxImageTesting.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ViewModelClass/>
    </Window.DataContext>
    <Grid Height="Auto" Width="Auto" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Height="Auto" Width="Auto" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Name="imageButtonShowEditorControl" Source="{Binding Path=UITypeEditorButtonImage}" Height="16" Width="16" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
